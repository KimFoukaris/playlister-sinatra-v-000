<h1>Create a New Song</h1>

<form action="/songs" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="Name" id="song_name">

  <br></br>

  <%Genre.all.each do |genre|%>
    <input type="checkbox" name="song[genre_id]" id="<%= genre.name %>" value="<%=genre.id%>"><%=owner.name%></input>
  <%end%>

  <br></br>
    <label>Artist:</label>
      <input  type="text" name="artist[name]" id="artist_name"></input>
    <br></br>

  <input type="submit" value="Create Song">
</form>
